// Prisma schema for Learn Code Platform
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String
  icon        String?
  order       Int      @default(0)
  lessons     Lesson[]
  createdAt   DateTime @default(now())
}

model Lesson {
  id        String   @id @default(cuid())
  title     String
  slug      String
  content   String
  order     Int
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  
  @@unique([courseId, slug])
}
